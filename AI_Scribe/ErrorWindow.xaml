<!-- ErrorWindow.xaml -->
<Window x:Class="AI_Scribe.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" 
        Height="200" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="10" 
            Background="#FF1E1E1E"
            BorderBrush="#FF3D3D3D"
            BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <Path Data="M16,2.3c7.6,0,13.7,6.1,13.7,13.7c0,7.6-6.1,13.7-13.7,13.7S2.3,23.6,2.3,16C2.3,8.4,8.4,2.3,16,2.3z M16,0 C7.2,0,0,7.2,0,16s7.2,16,16,16s16-7.2,16-16S24.8,0,16,0z M14.8,7.4h2.3v8.2h-2.3V7.4z M14.8,17.5h2.3v2.3h-2.3V17.5z"
                      Fill="#C42B1C"
                      Width="24"
                      Height="24"
                      Stretch="Uniform"
                      Margin="0,0,10,0"/>
                <TextBlock Text="Error"
                         Foreground="White"
                         FontSize="18"
                         VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Error Message -->
            <TextBlock x:Name="ErrorMessageText"
                     Grid.Row="1"
                     Foreground="#FF999999"
                     TextWrapping="Wrap"
                     VerticalAlignment="Center"/>

            <!-- Close Button -->
            <Button Grid.Row="2"
                    Content="Close"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0"
                    Width="80"
                    Height="30"
                    Background="#FF2D2D2D"
                    Foreground="White"
                    BorderThickness="0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</Window>