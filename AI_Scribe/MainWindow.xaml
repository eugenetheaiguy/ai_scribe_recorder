<Window x:Class="AI_Scribe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sound Recorder" Height="600" Width="1000"
        Background="#FF1E1E1E">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3D3D3D"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ModernTabControl Style -->
        <Style x:Key="ModernTabControl" TargetType="TabControl">
            <Setter Property="Background" Value="#FF252526"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- ModernTabItem Style -->
        <Style x:Key="ModernTabItem" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <!-- Bottom border indicator for selected state -->
                            <Border Name="MainBorder"
                                    Background="#FF2D2D2D">
                                <ContentPresenter x:Name="ContentSite"
                                                  ContentSource="Header"
                                                  Margin="10,5"/>
                            </Border>
                            <Border Name="SelectedBorder" 
                                    Height="2" 
                                    Background="White" 
                                    VerticalAlignment="Bottom" 
                                    Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Panel.ZIndex" Value="1"/>
                                <Setter TargetName="MainBorder" Property="Background" Value="#FF3D3D3D"/>
                                <Setter TargetName="SelectedBorder" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#FF999999"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- RecordingButton Style -->
        <Style x:Key="RecordingButton" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ButtonEllipse"
                                     Fill="#C42B1C"/>
                            <Ellipse x:Name="InnerCircle"
                                     Width="15"
                                     Height="15"
                                     Fill="White"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonEllipse" Property="Fill" Value="#A42316"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- RecordingButtonActive Style -->
        <Style x:Key="RecordingButtonActive" TargetType="Button" BasedOn="{StaticResource RecordingButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ButtonEllipse"
                                     Fill="#C42B1C"/>
                            <Rectangle Width="15"
                                       Height="15"
                                       Fill="White"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonEllipse" Property="Fill" Value="#A42316"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="NotificationBanner" TargetType="Border">
            <Setter Property="Background" Value="#FF2D2D2D"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Opacity" Value="0"/>
        </Style>

        <!-- Add these animations to Window.Resources -->
        <Storyboard x:Key="ShowNotification">
            <DoubleAnimation Storyboard.TargetName="NotificationBanner"
                     Storyboard.TargetProperty="Opacity"
                     From="0" To="1" Duration="0:0:0.2"/>
        </Storyboard>
  

        <Storyboard x:Key="HideNotification">
            <DoubleAnimation Storyboard.TargetName="NotificationBanner"
                     Storyboard.TargetProperty="Opacity"
                     From="1" To="0" Duration="0:0:0.2"/>
        </Storyboard>
    </Window.Resources>

    <Grid Margin="10">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Add this right after the opening Grid tag in your main window -->
        <Border x:Name="NotificationBanner" 
        Style="{StaticResource NotificationBanner}"
        Panel.ZIndex="1000"
        Grid.ColumnSpan="2"
                >
            <TextBlock x:Name="NotificationText"
               Foreground="White"
               FontSize="14"
               Text=""/>
        </Border>
        <!-- Left Panel - Recording List -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Import File and Delete Selected Buttons -->
            <!-- Import File, Select All Checkbox, and Delete Selected Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="+ Import file" 
            Visibility="Hidden"
            Style="{StaticResource ModernButton}"
            HorizontalAlignment="Left"/>
                <CheckBox Content="Select All"
              Margin="90,0,0,0"
              VerticalAlignment="Center"
              HorizontalAlignment="Right"
              Foreground="White"
              IsChecked="{Binding IsAllSelected}"/>
                <Button
        Style="{StaticResource ModernButton}"
        Margin="10,0,0,0"
        HorizontalAlignment="Left"
        Click="DeletedButton_Click">
                    <Grid Width="14" Height="16">
                        <!-- Lid -->
                        <Path Fill="White"
              Data="M 0,3 L 14,3 L 14,4 L 0,4 Z"/>
                        <!-- Lid Handle -->
                        <Path Fill="White"
              Data="M 5,0 L 9,0 L 9,2 L 14,2 L 14,3 L 0,3 L 0,2 L 5,2 Z"/>
                        <!-- Bin Body -->
                        <Path Fill="White"
              Data="M 2,4 L 12,4 L 11,16 L 3,16 Z">
                        </Path>
                        <!-- Delete Lines -->
                        <Path Fill="White"
              Data="M 5,7 L 9,7 L 9,13 L 5,13 Z">
                            <Path.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Offset="0" Color="Black"/>
                                    <GradientStop Offset="0.2" Color="Transparent"/>
                                    <GradientStop Offset="0.8" Color="Transparent"/>
                                    <GradientStop Offset="1" Color="Black"/>
                                </LinearGradientBrush>
                            </Path.OpacityMask>
                        </Path>
                    </Grid>
                </Button>
            </StackPanel>

            <!-- Recording List -->
            <ListView Grid.Row="2" 
                      Background="#FF252526"
                      BorderThickness="0"
                      ItemsSource="{Binding Recordings}"
                      SelectedItem="{Binding SelectedRecording}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Padding" Value="10,5"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF2D2D2D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <!-- Define columns: Left for content, Right for CheckBox -->
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left side: Text content -->
                            <StackPanel Grid.Column="0">
                                <TextBox Text="{Binding DisplayName}"/>


                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding RecordedAtDisplay}" Foreground="#FF999999" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding DurationDisplay}" Foreground="#FF999999"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right side: CheckBox with buffer -->
                            <CheckBox Grid.Column="1" 
                                      VerticalAlignment="Center" 
                                      HorizontalAlignment="Right" 
                                      Margin="20,0,0,0" 
                                      IsChecked="{Binding IsSelectedForDeletion}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- ComboBox for Input Device -->
            <StackPanel Grid.Row="3" 
                        Orientation="Horizontal" 
                        Margin="0,10,0,0">
                <ComboBox Width="200" 
                          Background="#FF2D2D2D"
                          Foreground="White"
                          Visibility="Hidden"
                          BorderThickness="0">
                    <ComboBoxItem Content="No input device"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Right Panel - Waveform and Controls -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Waveform Display -->
            <Border Grid.Row="1" 
                    Background="#FF252526"
                    CornerRadius="4">
                <Grid>

                    <!-- Processing Overlay -->
                    <Grid x:Name="ProcessingOverlay" 
              Visibility="Collapsed"
              Panel.ZIndex="1000">
                        <Rectangle Fill="#80000000"/>
                        <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                            <!-- Loading Spinner -->
                            <Grid Width="40" Height="40" RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <RotateTransform x:Name="SpinnerRotation"/>
                                </Grid.RenderTransform>
                                <Grid.Triggers>
                                    <EventTrigger RoutedEvent="Grid.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation 
                                        Storyboard.TargetName="SpinnerRotation"
                                        Storyboard.TargetProperty="Angle"
                                        From="0" To="360"
                                        Duration="0:0:1"
                                        RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Grid.Triggers>
                                <Path Stroke="White" 
                          StrokeThickness="4"
                          StrokeEndLineCap="Round">
                                    <Path.Data>
                                        <PathGeometry>
                                            <PathGeometry.Figures>
                                                <PathFigureCollection>
                                                    <PathFigure StartPoint="20,0">
                                                        <PathFigure.Segments>
                                                            <ArcSegment 
                                                    Point="20,40" 
                                                    Size="20,20" 
                                                    IsLargeArc="True"
                                                    SweepDirection="Clockwise"/>
                                                        </PathFigure.Segments>
                                                    </PathFigure>
                                                </PathFigureCollection>
                                            </PathGeometry.Figures>
                                        </PathGeometry>
                                    </Path.Data>
                                </Path>
                            </Grid>

                            <!-- Processing Text -->
                            <TextBlock Text="Processing..."
                           Foreground="White"
                           FontSize="16"
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    <Grid>
                    <!-- TabControl -->
                    <TabControl HorizontalAlignment="Stretch" 
                                VerticalAlignment="Stretch"
                                x:Name="DocumentTabControl"
                                Style="{StaticResource ModernTabControl}"
                                ItemContainerStyle="{StaticResource ModernTabItem}">
                        <!-- Apply the ModernTabItem style here -->

                            <!-- Tab 1: Note -->
                            <TabItem Header="Note">
                                <TextBox AcceptsReturn="True" 
                                        TextWrapping="Wrap"
                                        VerticalScrollBarVisibility="Auto"
                                        HorizontalScrollBarVisibility="Disabled"
                                        Background="Transparent"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10"
                                        Text="{Binding SelectedRecording.Note, UpdateSourceTrigger=PropertyChanged}"/>
                            </TabItem>
                                <!-- Tab 2: Transcript -->
                            <TabItem Header="Transcript">
                                <TextBox AcceptsReturn="True" 
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"
                                         HorizontalScrollBarVisibility="Disabled"
                                         Background="Transparent"
                                         Foreground="White"
                                         BorderThickness="0"
                                         Padding="10"
                                         Text="{Binding SelectedRecording.Transcript, UpdateSourceTrigger=PropertyChanged}"/>
                            </TabItem>

                            <!-- Tab 3: Instructions (Chat Interface) -->
                            <!-- Tab 3: Instructions (Chat Interface) -->
                            <TabItem Header="Instructions">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Chat Display Area -->
                                    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding ChatMessages}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid Margin="0,5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <!-- AI Message (Left Side) -->
                                                        <Border Grid.Column="0" 
                                    Background="#383838" 
                                    CornerRadius="10,10,10,0" 
                                    Padding="10"
                                    Margin="5,5,15,5"
                                    Visibility="{Binding IsAIMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBlock Text="{Binding Content}" 
                                           TextWrapping="Wrap" 
                                           Foreground="White"/>
                                                        </Border>

                                                        <!-- User Message (Right Side) -->
                                                        <Border Grid.Column="1" 
                                    Background="#0078D7" 
                                    CornerRadius="10,10,0,10" 
                                    Padding="10"
                                    Margin="15,5,5,5"
                                    Visibility="{Binding IsUserMessage, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                            <TextBox Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         TextWrapping="Wrap" 
                                         Foreground="White"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         AcceptsReturn="True"
                                         IsReadOnly="False"/>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <!-- Input Area -->
                                    <Grid Grid.Row="1" Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" 
                     x:Name="ChatInputBox"
                     Height="50"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     Padding="10,5"
                     Background="#262626"
                     Foreground="White"
                     BorderBrush="#444444"
                     BorderThickness="1"
                     VerticalContentAlignment="Center"/>

                                        <Button Grid.Column="1"
                    Content="Send"
                    Margin="5,0,0,0"
                    Padding="15,0"
                    Background="#0078D7"
                    Foreground="White"
                    BorderThickness="0"
                    Command="{Binding SendMessageCommand}"
                    CommandParameter="{Binding ElementName=ChatInputBox, Path=Text}"/>
                                    </Grid>
                                </Grid>
                            </TabItem>


                        </TabControl>
                    

                    <!-- Buttons in the top-right corner of the TabControl -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                Margin="0,10,10,0">
                            <Button
                                Style="{StaticResource ModernButton}"
                                Click ="CopyButton_Click"
                                Margin="0,0,10,0" Height="24" Width="20">
                                <Grid Width="16" Height="16">
                                    <!-- Back rectangle -->
                                    <Rectangle Width="8" Height="8"
                                 Fill="White"
                                 HorizontalAlignment="Right"
                                 VerticalAlignment="Bottom"
                                 Margin="0,0,3,3"/>
                                    <!-- Front rectangle -->
                                    <Rectangle Width="8" Height="8"
                                 Fill="White"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Margin="3,3,0,0"/>
                                </Grid>
                            </Button>
                            <Button
                                Style="{StaticResource ModernButton}"
                                Click ="RegenerateButton_Click"
                                ToolTip="Regenerate">
                                <Path Data="M 12,5 A 7,7 0 1,1 5,12 L 7,12 A 5,5 0 1,0 12,7 L 12,5 M 12,3 L 12,7 L 8,5 L 12,3"
                                     Fill="White"
                                     Width="16"
                                     Height="16"
                                     Stretch="Uniform"/>
                            </Button>
                        </StackPanel>
                </Grid>
                </Grid>
            </Border>

            <!-- Playback Controls -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center">

                <!-- Add the recording button -->
                <Button x:Name="RecordButton"
                        Style="{StaticResource RecordingButton}"
                        Click="RecordButton_Click">
                    <Grid>
                        <!-- This is the stop symbol that shows when recording -->
                        <Rectangle x:Name="StopSymbol"
                                   Width="15"
                                   Height="15"
                                   Fill="White"
                                   Visibility="Collapsed"/>
                        <!-- This is the record symbol (circle) that shows when not recording -->
                        <Ellipse x:Name="RecordSymbol"
                                 Width="15"
                                 Height="15"
                                 Fill="White"/>
                    </Grid>
                </Button>

                <TextBlock Text="{Binding RecordingTime, StringFormat='{}{0:hh\\:mm\\:ss\\.ff}'}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           FontFamily="Consolas"
                           Margin="20,0"/>

                <!-- Name Input Section (Bottom Right) -->
                <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,10,10,0"/>



            </StackPanel>
        </Grid>
    </Grid>
</Window>